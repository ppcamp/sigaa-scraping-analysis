{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "",
      "label": "Build documentation",
      "args": [
        "make",
        "html",
        "--directory=${workspaceFolder}/src/doc"
      ],
      "windows": {
        "args": [
          "./src/doc/make.bat",
          "html",
          "--directory=${workspaceFolder}/src/doc"
        ]
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always"
      },
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "",
      "label": "Run tests",
      "args": [
        "python ./src/tests.py"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "reveal": "silent"
      },
      "problemMatcher": []
    }
  ]
}